  s.dependency 'Alamofire', '~> 4.4'
  s.dependency 'ObjectMapper'
  s.dependency 'ReachabilitySwift', '~> 3'

  s.pod_target_xcconfig = { 'SWIFT_VERSION' => '3' }

end

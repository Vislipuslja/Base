Pod::Spec.new do |s|

  s.name         = "Base"
  s.version      = "0.0.1"
  s.summary      = "Base protocols and class for development."
  s.description  = "Base protocols and class for development. Includes Requesting, MVVM..."
  s.homepage     = "http://github.com/Vislipuslja/Base"
  s.license      = "MIT"

  s.author       = { "Vislipuslja" => "https://github.com/Vislipuslja" }
  s.platform     = :ios, "9.0"

  # ――― Source Location ―――――――――――――――――――――――――――――――――――――――――――――――――――――――――― #
  #
